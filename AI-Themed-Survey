<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI主题小调查</title>
</head>
<body>

    <h1>AI主题小调查</h1>

    <form id="aiSurveyForm" onsubmit="submitForm(event)">
        <label for="name">姓名：</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="aiApplications">你了解的AI应用有哪些：</label><br>
        <textarea id="aiApplications" name="aiApplications" rows="4" cols="50" required></textarea><br><br>

        <input type="submit" value="提交">
    </form>

    <div id="response">
        <!-- 这里将显示表单提交后的响应 -->
    </div>

    <script>
        function submitForm(event) {
            event.preventDefault();

            // 获取表单数据
            var name = document.getElementById("name").value;
            var aiApplications = document.getElementById("aiApplications").value;

            // 模拟请求发送
            setTimeout(function () {
                // 模拟服务器返回的响应
                var responseHTML = "<h2>感谢您的参与，你提交的结果是：</h2>" +
                                    "<p>姓名：" + name + "</p>" +
                                    "<p>了解的AI应用有哪些：" + aiApplications + "</p>";
                document.getElementById("response").innerHTML = responseHTML;
            }, 200); // 模拟延时
        }
    </script>

</body>
</html>
